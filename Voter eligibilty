#include <iostream>
using namespace std; 

int main() {
    int age;
    cout << "Enter your age: ";
    cin >> age;
    try {
        if(age < 18) {
            throw age;
        }
        else {
            cout << "You are eligible to vote." << endl;
        }
    }
    catch(int e) {
        cout << "You must be at least 18 years old to vote." << endl;
    }
}



//Expected Output:

Enter your age: 17
You must be at least 18 years old to vote.
